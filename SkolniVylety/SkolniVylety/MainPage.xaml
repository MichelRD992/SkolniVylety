<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkolniVylety.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Margin="20">
        <Button Text="Třídy" x:Name="bTrida" Clicked="BTrida_Clicked"/>
        <Button Text="Programy výletů" x:Name="bVylet" Clicked="BVylet_Clicked"/>
        <Button Text="Plánované výlety" x:Name="bZajezd" Clicked="BZajezd_Clicked"/>
        <StackLayout Orientation="Horizontal" x:Name="sLayout">
            <Label x:Name="lZajezdy"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
