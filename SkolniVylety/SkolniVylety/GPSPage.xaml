<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkolniVylety.GPSPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <ScrollView Orientation="Both">
                <StackLayout x:Name="sSeznam">
                    <Label x:Name="lChyba" IsVisible="False" Text="Něco se pokazilo. Zkontrolujte, jestli máte zapnuté určování polohy a zkuzte to znovu." LineBreakMode="WordWrap"/>
                </StackLayout>
            </ScrollView>
            <FlexLayout>
                <Button x:Name="bPridat" Text="Přidat záznam" Clicked="bPridat_Clicked"/>
                <Button x:Name="bSmazat" Text="Vymazat záznamy" Clicked="bSmazat_Clicked"/>
            </FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>